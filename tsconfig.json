{
    "$schema": "https://json.schemastore.org/tsconfig",
    "display": "Default",
    "compilerOptions": {
        "rootDir": "src",
        "outDir": "dist",
        "target": "ESNext",
        "module": "commonjs",
        "composite": false,
        "declaration": true,
        "declarationMap": true,
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "inlineSources": false,
        "isolatedModules": false,
        "moduleResolution": "node",
        "noUnusedLocals": false,
        "noUnusedParameters": false,
        "preserveWatchOutput": true,
        "skipLibCheck": true,
        "strict": true,
        "allowSyntheticDefaultImports": true, // Enables default imports from non-ES6 modules
        "baseUrl": ".", // Ensures that relative imports start from the root
        "paths": {
            "*": [
                "node_modules/*"
            ] // Ensures that TypeScript looks in node_modules
        }
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "node_modules",
        "dist"
    ]
}